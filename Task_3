def chatbot():
    """
    A very simple rule-based chatbot.
    Responds to basic greetings and questions.
    """

    print("ğŸ¤– Chatbot: Hello! Type 'bye' to exit.\n")

    while True:
        user_input = input("You: ").lower()

        if user_input == "hello":
            print("ğŸ¤– Chatbot: Hi there!")
        elif user_input == "how are you":
            print("ğŸ¤– Chatbot: I'm fine, thanks! How about you?")
        elif user_input == "bye":
            print("ğŸ¤– Chatbot: Goodbye! Have a great day. ğŸ‘‹")
            break
        elif user_input.strip() == "":
            print("ğŸ¤– Chatbot: Please say something...")
        else:
            print("ğŸ¤– Chatbot: Sorry, I don't understand that.")

if __name__ == "__main__":
    chatbot()
